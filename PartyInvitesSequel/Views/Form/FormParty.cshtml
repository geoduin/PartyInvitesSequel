@{
    Layout = "_StartPage";
}
@model PartyInvitesSequel.Models.Guest
<h1>Hallo form party</h1>

<!--Form-->

<form asp-action="FormParty" method="post">
    <div></div>
    <div>
        <label asp-for="Name">Naam</label>
        <input asp-for="Name"/>
    </div>
    <div>
        <label asp-for="Email">Emailadres</label>
        <input asp-for="Email"/>
    </div>
    <div>
        <label asp-for="Phone">Telefoonnummer</label>
        <input asp-for="Phone"/>
    </div>
    <div>
        <label asp-for="WillAttend">Wilt u aanwezig zijn?</label>
        <select asp-for="WillAttend">
            <option value="">Kies</option>
            <option value="true">Ja</option>
            <option value="false">Nee</option>
        </select>
    </div>

    <button action="submit">Druk verder</button>
</form>
